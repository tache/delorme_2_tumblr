source 'https://rubygems.org'
ruby '2.2.4'

gem 'oauth'
gem 'tumblr_client'               # A Ruby Wrapper for the Tumblr v2 API
gem "awesome_print"               # Pretty print your Ruby objects with style
gem 'geocoder'                    # Complete Ruby geocoding solution
gem 'mini_magick'                 # Ruby wrapper for ImageMagick
gem 'polylines'                   # Easily handle Google polylines - https://github.com/joshuaclayton/polylines
gem 'google-api-client'
gem 'ffaker'
gem 'time_difference'             # print out time difference (duration) in year, month, week, day, hour, minute, and second. - https://github.com/tmlee/time_difference
gem 'forecast_io'                 #  Retrieve data from the Forecast Weather API - https://github.com/darkskyapp/forecast-ruby
gem 'nokogiri'
gem 'curb'                        # Ruby bindings for libcurl - https://github.com/taf2/curb
gem 'aws-sdk' 
gem 'ruby-units'                  # A unit handling library for ruby - https://github.com/olbrich/ruby-units
gem 'wannabe_bool'                # string, numeric, symbol and nil values wanna be a boolean value - https://github.com/prodis/wannabe_bool
gem 'twilio-ruby'
gem 'twitter'                     # Ruby interface to the Twitter API. https://github.com/sferik/twitter
